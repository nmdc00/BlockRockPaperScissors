{
  "compilerOptions": {
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "target": "ESNext",
    "lib": ["DOM", "ESNext"]
    
  },
  "include": [
    "app/javascript/**/*.ts",
    "app/javascript/**/*.tsx",
    "app/javascript/**/*.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
