<!DOCTYPE html>
<html>
  <head>
    <title>RpsDapp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>

  </head>

  <body>
    <div id="react-root" data-react-component="Web3Dashboard" data-contract-address="<%= ENV['CONTRACT_ADDRESS'] %>"></div>

    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
    <script id="data-contract-address">
      window.ENV = {
        CONTRACT_ADDRESS: "<%= ENV['CONTRACT_ADDRESS'] %>"
      };
      console.log("Contract Address from application.html.erb:", window.ENV.CONTRACT_ADDRESS);
    </script>
  </body>
</html>
