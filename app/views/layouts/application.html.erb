<!DOCTYPE html>
<html>
  <head>
    <title>RpsDapp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

  </head>

  <body>
    <div id="react-root" data-react-component="Web3Dashboard" data-contract-address="<%= ENV['CONTRACT_ADDRESS'] %>"></div>
  </body>

  <script src="/packs/application.js" defer></script>
  <script id="data-contract-address">
    window.ENV = {
      CONTRACT_ADDRESS: "<%= ENV['CONTRACT_ADDRESS'] %>"
    };
    console.log("Contract Address from application.html.erb:", window.ENV.CONTRACT_ADDRESS);
  </script>
</html>
